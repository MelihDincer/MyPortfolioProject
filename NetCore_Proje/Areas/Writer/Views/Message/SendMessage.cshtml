@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row justify-content-center">
        <div class="col-md-12 grid-margin">
            <form method="post" class="form-group">
                <div class="card">
                    <h3 style="margin:25px">Yeni Mesaj Gönderme Sayfası</h3>
                    <div class="text-right" style="padding-right:20px">
                        <strong style="font-size:14px">@DateTime.Now.ToString("dd MMM yyyy")</strong>
                    </div>
                    <div class="card-body" style="margin-bottom:15px">
                        <div class="container">
                            <label>Alıcı Mail:</label>
                            <input type="text" asp-for="Receiver" class="form-control" />
                            <br />
                            <label>Konu:</label>
                            <input type="text" asp-for="Subject" class="form-control" />
                            <br />
                            <label>Mesaj:</label>
                                <textarea rows="20" asp-for ="MessageContent" class="form-control">  /></textarea>
                            <button style="float:right" class="btn btn-primary mt-3">Gönder</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

