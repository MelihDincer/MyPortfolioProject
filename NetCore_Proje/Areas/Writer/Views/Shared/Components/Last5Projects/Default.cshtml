@* Last5Projects *@
@model List<Portfolio>

<div class="col-md-4 stretch-card grid-margin">
    <div class="card">
        <div class="card-body">
            <p class="card-title mb-0">Projeler</p>
            <div class="table-responsive mt-2">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th class="pl-0  pb-2 border-bottom">Proje Adı</th>
                            <th class="border-bottom pb-2">İlerleme Durumu</th>
                            <th class="border-bottom pb-2">Proje Linki</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="pl-0">@item.Name</td>
                                <td><p class="mb-0"><span class="font-weight-bold mr-2"></span>@item.Value%</p></td>
                                <td class="text-muted text-danger"><a target="_blank" href="@item.ProjectUrl">GitHub Linki</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>