@* Statistics *@

﻿<div class="col-md-4 stretch-card grid-margin">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-title">İstatistikler</p>
                    <div class="charts-data">
                        <div class="mt-3">
                            <p class="mb-0">Proje Sayısı</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="progress progress-md flex-grow-1 mr-4">
                                    <div class="progress-bar bg-inf0" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <p class="mb-0">@ViewBag.projectCount</p>
                            </div>
                        </div>
                        <div class="mt-3">
                            <p class="mb-0">Referans Sayısı</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="progress progress-md flex-grow-1 mr-4">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <p class="mb-0">@ViewBag.skillCount</p>
                            </div>
                        </div>
                        <div class="mt-3">
                            <p class="mb-0">Yetenek Sayısı</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="progress progress-md flex-grow-1 mr-4">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <p class="mb-0">@ViewBag.experienceCount</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 stretch-card grid-margin grid-margin-md-0">
            <div class="card data-icon-card-primary">
                <div class="card-body">
                    <p class="card-title text-white">Toplam Kullanıcı Sayısı</p>
                    <div class="row">
                        <div class="col-8 text-white">
                            <h3>@ViewBag.userCount</h3>
                            <p class="text-white font-weight-500 mb-0">Sayfama kayıt olan arkadaşlarıma teşekkürlerimi iletiyorum. Herkese iyi çalışmalar dilerim.</p>
                        </div>
                        <div class="col-4 background-icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>