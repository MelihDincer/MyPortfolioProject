@model NetCore_Proje.Areas.Writer.Models.UserEditPasswordViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Şifre Yenileme</h4>
            <br />
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Yeni Şifreniz</label>
                    <input type="text" asp-for="Password" class="form-control" id="exampleInputName1" placeholder="Yeni şifrenizi girin.">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Yeni Şifre Tekrar</label>
                    <input type="text" asp-for="PasswordConfirm" class="form-control" id="exampleInputName1" placeholder="Yeni şifrenizi tekrar girin.">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>