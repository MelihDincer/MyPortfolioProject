@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = "";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (!(item.Status == "Eğitim Sonu" && item.Status == "Revize" && item.Status == "Paylaşım" && item.Status == "Önemli"))
                            {
                                color = "badge badge-primary";
                            }
                            if (item.Status == "Eğitim Sonu")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Status == "Revize")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Status == "Paylaşım")
                            {
                                color = "badge badge-info";
                            }
                            if (item.Status == "Önemli")
                            {
                                color = "badge badge-danger";
                            }                         
                            
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Title</td>
                                <td>@(((DateTime)item.Date).ToString("dd MMM yyyy"))</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td><a href="/Writer/Announcement/AnnouncementDetails/@item.ID" class="badge badge-dark">Detaylar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

