@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form asp-action="AddExperience" asp-controller="Experience" method="post" class="forms-sample">
                <div class="form-group">
                    <label>Başlık</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Tarih Bilgisi</label>
                    <input asp-for="Date" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Resim Yolu</label>
                    <input asp-for="ImageUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea rows="15" asp-for="Description" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Ekle</button>
                <a href="/Experience/Index/" class="btn btn-dark mr-2">Cancel</a>
            </form>
        </div>
    </div>
</div>