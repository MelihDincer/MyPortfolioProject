@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Hizmet Listesi Tablosu</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Başlık</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="budget">
                                    @item.ServiceID
                                </td>
                                <td class="budget">
                                    @item.Title
                                </td>
                                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-dark" onclick="return confirm('Bu deneyimi silmek istediğinize emin misiniz?')">Sil</a></td>
                                <td><a href="/Service/EditService/@item.ServiceID" class="btn btn-light text-dark">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="/Service/AddService/" class="btn btn-primary">Yeni Proje Girişi</a>
    </div>
</div>