@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form asp-action="AddService" asp-controller="Service" method="post" class="forms-sample">
                <div class="form-group">
                    <label>Hizmet Başlığı</label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Resim Yolu</label>
                    <input type="ImageUrl" asp-for="ImageUrl" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a href="/Service/Index/" class="btn btn-dark mr-2">İptal</a>
            </form>
        </div>
    </div>
</div>