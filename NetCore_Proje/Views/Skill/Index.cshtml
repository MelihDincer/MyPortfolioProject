@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            @* <div class="card-header bg-transparent border-0">
            <h3 class="text-white mb-0">Yetenek Listesi Tablosu</h3>
            </div>*@
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Başlık</th>
                            <th scope="col" class="sort" data-sort="budget">Oran</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="budget">
                                    @item.SkillID
                                </td>
                                <td class="budget">
                                    @item.Title
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="completion mr-2">@item.Value %</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar bg-success" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-danger" onclick="return confirm('Bu deneyimi silmek istediğinize emin misiniz?')">Sil</a></td>
                                <td><a href="/Skill/EditSkill/@item.SkillID" class="btn btn-outline-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div><div class="mt-3">
            <a href="/Skill/AddSkill/" class="btn btn-primary">Yeni Yetenek Girişi</a>
        </div>
        
    </div>
</div>


