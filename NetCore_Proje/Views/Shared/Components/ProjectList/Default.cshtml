@using EntityLayer.Concrete
@model List<Portfolio>

@{
    string status = "";
    string views = "";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ana Görsel</th>
                                <th>Proje Adı </th>
                                <th> URL </th>
                                <th> Fiyat </th>
                                <th> Tamamlanma</th>
                                <th> Durum </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.Value <= 70)
                                {
                                    status = "Henüz Tamamlanmadı";
                                    views = "badge badge-outline-danger";
                                }
                                if (item.Value > 50 && item.Value < 100)
                                {
                                    status = "Tamamlanmak Üzere";
                                    views = "badge badge-outline-warning";
                                }
                                if (item.Value == 100)
                                {
                                    status = "Tamamlandı";
                                    views = "badge badge-outline-success";
                                }
                                <tr>
                                    <td>@item.PortfolioID</td>
                                    <td><img src="@item.ImageUrl"></td>
                                    <td>@item.Name</td>
                                    <td><a href="@item.ProjectUrl" style="color:steelblue">@item.ProjectUrl</a></td>
                                    <td>@item.Price</td>
                                    <td>%@item.Value</td>
                                    <td>
                                        <div class="@views">@status</div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>