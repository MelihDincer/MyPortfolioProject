@model EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form asp-action="EditSocialMedia" asp-controller="SocialMedia" method="post" class="form-group">
                <input type="hidden" asp-for="SocialMediaID" />
                <br />
                <label>Başlık</label>
                <input asp-for="Name" class="form-control" />
                <br />
                <label>Url</label>
                <input asp-for="Url" class="form-control" />
                <br />
                <label>İkon Url</label>
                <input asp-for="Icon" class="form-control" />
                <br />
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a href="/SocialMedia/Index/" class="btn btn-dark ml-2">İptal</a>
            </form>
        </div>
    </div>
</div>

