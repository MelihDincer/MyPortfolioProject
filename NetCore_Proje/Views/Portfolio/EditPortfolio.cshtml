@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "EditPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<style>
    span {
        font-size: 12px;
        font-family: Bahnschrift;
    }
</style>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form asp-action="EditPortfolio" asp-controller="Portfolio" method="post" class="forms-sample">
                <div class="form-group">
                    <label>Proje Başlığı</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Görsel-1</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Görsel-2</label>
                    <input type="text" asp-for="ImageUrl2" class="form-control" />
                    <span asp-validation-for="ImageUrl2" class="text-danger mt-1"></span>
                </div>
                <div class="form-group">
                    <label>Proje URL</label>
                    <input type="text" asp-for="ProjectUrl" class="form-control" />
                    <span asp-validation-for="ProjectUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="text" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Tamamlanma Oranı</label>
                    <input type="text" asp-for="Value" class="form-control" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Platform Görseli</label>
                    <input type="text" asp-for="Platform" class="form-control" />
                    <span asp-validation-for="Platform" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Ek Görsel-1</label>
                    <input type="text" asp-for="Image1" class="form-control" placeholder="Zorunlu Değil.." />
                    <span asp-validation-for="Image1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Ek Görsel-2</label>
                    <input type="text" asp-for="Image2" class="form-control" placeholder="Zorunlu Değil.." />
                    <span asp-validation-for="Image2" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a href="/Portfolio/Index/" class="btn btn-dark mr-2">İptal</a>
            </form>
        </div>
    </div>
</div>