@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form asp-action="Index" asp-controller="About" method="post" class="forms-sample">
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Yaş</label>
                    <input type="text" asp-for="Age" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Mail Adresi</label>
                    <input type="email" asp-for="Mail" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    <input type="tel" asp-for="Phone" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    <input type="text" asp-for="Address" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Görsel Yolu</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea rows="15" asp-for="Description" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>